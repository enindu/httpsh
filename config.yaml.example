# Socket configurations
network: tcp
host: 127.0.0.1
port: 5000

# Handler configurations
directory: /path/to/directory/
mime: text/plain; charset=UTF-8
methods:
  - GET
  - HEAD
executables:
  cat:
    - --help
  grep:
    - --help
  ls:
    - --help

# Server configurations
read: 5
write: 5
idle: 60
ca: /path/to/ca.crt
certificate: /path/to/server.crt
key: /path/to/server.key
